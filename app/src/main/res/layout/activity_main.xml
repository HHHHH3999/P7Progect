<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




      <FrameLayout
      app:layout_constraintTop_toTopOf="parent"
          android:id="@+id/tab_content"
          app:layout_constraintBottom_toTopOf="@id/ll_bottom"
          android:layout_width="match_parent"
          android:layout_height="0dp" />

      <RadioGroup
          app:layout_constraintBottom_toBottomOf="parent"
          android:id="@+id/ll_bottom"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:layout_alignParentBottom="true"

          android:background="#f2ffffff"

          android:orientation="horizontal">

         <RadioButton

        android:drawableTop="@drawable/selecttab"
             android:id="@+id/btn_shouye"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_weight="1"
             android:button="@null"
             android:checked="true"
             android:gravity="center"
             android:text="首页" />


         <RadioButton
             android:drawableTop="@drawable/selecttab2"
             android:id="@+id/btn_zhuanti"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_weight="1"
             android:button="@null"
             android:gravity="center"
             android:text="专题" />

         <RadioButton
             android:drawableTop="@drawable/selecttab3"
             android:id="@+id/btn_fenlei"
             style="@style/rediobutton_main_style"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_weight="1"
             android:button="@null"
             android:gravity="center"
             android:text="分类" />

         <RadioButton
             android:drawableTop="@drawable/selecttab4"
             android:id="@+id/btn_gouwu"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:button="@null"
             android:gravity="center"
             android:text="购物车"

             />

         <RadioButton

             android:drawableTop="@drawable/selecttab5"
             android:id="@+id/btn_mine"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:button="@null"
             android:gravity="center"
             android:text="我的" />
      </RadioGroup>





</androidx.constraintlayout.widget.ConstraintLayout>